@model WarehouseSystem.Models.Invoice

@{
    ViewData["Title"] = "Удаление фактуры";
}

<h1>Удаление фактуры</h1>

<h3>Вы уверены, что хотите удалить фактуру?</h3>
<div>
    <h4>Фактура</h4>
    <hr />
    <div>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
        </dl>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Time)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Time)
            </dd>
        </dl>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Responsible)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Responsible.FullName)
            </dd>
        </dl>
    </div>
    <div>
        <div class="form-group info-input">
            <dt class = "col-sm-12">
                <label asp-for="Imports" class="control-label"></label>
            </dt>
        </div>
        <div id="imports-table" class = "border rounded imports-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Imports.First().ProductID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Imports.First().Quantity)
                        </th>
                        </tr>
                </thead>
                <tbody>
                    @{
                        foreach (Import import in Model.Imports)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => import.Product.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => import.Quantity)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">К списку фактур</a>
    </form>
</div>
