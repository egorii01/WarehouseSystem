@model WarehouseSystem.Models.Invoice

@{
    ViewData["Title"] = "Детали поступления";
}

<h1>Подробности</h1>

<div>
    <h4>Поступление на склад</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Responsible)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Responsible.FullName)
        </dd>
    </dl>
    <div class = "row">
        <dt class = "col-sm-12">
            @Html.DisplayNameFor(model => model.Imports)
        </dt>
    </div>
    
    @{
        if (Model.Imports.Count() <= 0)
        {
            <dd>Товары отсутствуют</dd>
        }
        else
        {
            <table class = "table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Imports.First().Product)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Imports.First().Quantity)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (Import import in Model.Imports)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => import.Product.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => import.Quantity)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    }  
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Назад</a>
</div>
